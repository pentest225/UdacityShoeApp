<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="login_title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="login_subtitle">

        <item name="android:textColor">@color/white</item>
         <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="brand_style">

        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="input_him_text">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/whiteGray</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="input_text_area">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/whiteGray</item>
        <item name="android:layout_height">148dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="default_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text_bold">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="title_page">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="shoes_size_select">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>
    <style name="shoes_size_unselect" parent="shoes_size_select">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="sub_title_page">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="welcome">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">64sp</item>
    </style>
    <style name="welcome_subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="you">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="the">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">44sp</item>
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>

        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>
    <style name="article_name">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="article_description">
        <item name="android:textColor">@color/whiteGray</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
